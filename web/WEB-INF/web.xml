<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <welcome-file-list>
        <welcome-file>signin.jsp</welcome-file>
    </welcome-file-list>
    
    <filter>
        <filter-name>encodeFilter</filter-name>
        <filter-class>com.article.processing.filter.EncodeFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>encodeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.article.processing.filter.LoginFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.RegisterServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>userVerificationServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.UserVerificationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>userVerificationServlet</servlet-name>
        <url-pattern>/register/userVerification</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>resendServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.ResendServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>resendServlet</servlet-name>
        <url-pattern>/register/resend</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>saveArticleServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.SaveArticleServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>saveArticleServlet</servlet-name>
        <url-pattern>/saveArticle.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>searchArticleServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.SearchArticleServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>searchArticleServlet</servlet-name>
        <url-pattern>/searchArticle.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>adminLoginServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>adminLoginServlet</servlet-name>
        <url-pattern>/admin-login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>updatePasswordServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.UpdatePasswordServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>updatePasswordServlet</servlet-name>
        <url-pattern>/updatePassword</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>updateUserServlet</servlet-name>
        <servlet-class>com.article.processing.servlet.UpdateUserServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>updateUserServlet</servlet-name>
        <url-pattern>/updateUser</url-pattern>
    </servlet-mapping>
</web-app>